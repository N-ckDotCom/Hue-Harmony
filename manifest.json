{
    "manifest_version": 2,
    "name": "Dynamic Toolbar Color",
    "version": "1.0",
    "description":"Matches the toolbars background color with the background color of the website.",
    "permissions": ["activeTab","theme","tabs","<all_urls>","browserSettings"],
    "icons": {
      "48": "icons/icon.svg"},
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }
  